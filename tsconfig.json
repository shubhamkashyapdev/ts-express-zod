{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@routers/*": [
        "./src/routers/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@schemas/*": [
        "./src/schemas/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ]
    }
  },
  "ts-node-dev": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}